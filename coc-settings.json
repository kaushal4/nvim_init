{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "java.configuration.runtimes": [
        {
            "name":"JavaSE-17",
            "path": "/usr/lib/jvm/java-18-openjdk-bin",
            "default":true
        }
    ]
}
